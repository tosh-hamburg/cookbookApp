<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Cookbook" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/surface</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Window -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Popup Menu - fix text color -->
        <item name="popupMenuStyle">@style/Theme.Cookbook.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Theme.Cookbook.PopupMenu</item>
    </style>
    
    <!-- Popup Menu Style with proper text colors -->
    <style name="Theme.Cookbook.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/surface</item>
    </style>
    
    <!-- Toolbar Text Appearances -->
    <style name="TextAppearance.Cookbook.Toolbar.Collapsed" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Cookbook.Toolbar.Expanded" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Theme.Cookbook.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="subtitleTextColor">@color/text_on_primary</item>
    </style>
    
    <!-- Toolbar Theme Overlay for white icons -->
    <style name="ThemeOverlay.Cookbook.Toolbar" parent="">
        <item name="colorControlNormal">@color/text_on_primary</item>
        <item name="android:textColorPrimary">@color/text_on_primary</item>
        <item name="android:textColorSecondary">@color/text_on_primary</item>
        <item name="actionMenuTextColor">@color/text_on_primary</item>
    </style>
    
    <!-- Card Style -->
    <style name="Theme.Cookbook.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Theme.Cookbook.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Theme.Cookbook.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Chip Style -->
    <style name="Theme.Cookbook.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipCornerRadius">20dp</item>
    </style>
    
    <!-- Text Input Style -->
    <style name="Theme.Cookbook.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Theme.Cookbook.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/text_on_primary</item>
    </style>
    
    <!-- NoActionBar variant for Login -->
    <style name="Theme.Cookbook.NoActionBar" parent="Theme.Cookbook">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
