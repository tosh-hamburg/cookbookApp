<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSlot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/card_stroke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Day Name -->
        <TextView
            android:id="@+id/textDayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- Day Date -->
        <TextView
            android:id="@+id/textDayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Meal Slots -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Breakfast -->
            <LinearLayout
                android:id="@+id/slotBreakfast"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_breakfast"
                    android:contentDescription="@string/breakfast"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/textBreakfast"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/breakfast"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/checkBreakfast"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_check"
                    android:contentDescription="@string/breakfast"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>

            <!-- Lunch -->
            <LinearLayout
                android:id="@+id/slotLunch"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_lunch"
                    android:contentDescription="@string/lunch"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/textLunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/lunch"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/checkLunch"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_check"
                    android:contentDescription="@string/lunch"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>

            <!-- Dinner -->
            <LinearLayout
                android:id="@+id/slotDinner"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_dinner"
                    android:contentDescription="@string/dinner"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/textDinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="@string/dinner"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/checkDinner"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_check"
                    android:contentDescription="@string/dinner"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
